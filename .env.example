# 审查系统环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改配置值

# ================================
# Flask 应用配置
# ================================

# Flask 密钥 (用于会话加密等安全功能)
# 生产环境中请使用强随机密钥，可以使用 python -c "import secrets; print(secrets.token_hex(32))" 生成
SECRET_KEY=your-secret-key-here

# 应用运行模式 (true/false)
# 开发环境设置为 true，生产环境设置为 false
DEBUG=false

# 应用监听地址和端口
# 127.0.0.1 仅本地访问，0.0.0.0 允许外部访问
HOST=127.0.0.1
PORT=5050

# ================================
# Dify API 配置 (必需)
# ================================

# Dify API 基础URL
# 请根据您的 Dify 部署地址进行修改
DIFY_API_BASE_URL=http://localhost/v1

# Dify API 访问令牌 (必需配置)
# 从 Dify 控制台获取 API Token
DIFY_API_TOKEN=your-dify-api-token-here

# ================================
# 文件上传配置
# ================================

# 文件上传目录
# 相对于项目根目录的路径
UPLOAD_FOLDER=static

# 最大文件大小 (字节)
# 默认16MB = 16 * 1024 * 1024 = 16777216
MAX_CONTENT_LENGTH=16777216

# ================================
# 日志配置
# ================================

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# 开发环境建议使用 DEBUG 或 INFO
# 生产环境建议使用 WARNING 或 ERROR
LOG_LEVEL=INFO

# 日志文件路径
# 相对于项目根目录的路径
LOG_FILE=logs/app.log

# 日志文件最大大小 (字节)
# 默认10MB = 10 * 1024 * 1024 = 10485760
LOG_MAX_BYTES=10485760

# 日志文件备份数量
# 当日志文件达到最大大小时，保留的备份文件数量
LOG_BACKUP_COUNT=5

# ================================
# 安全配置
# ================================

# 启用CSRF保护 (true/false)
# 生产环境强烈建议设置为 true
CSRF_ENABLED=true

# ================================
# 环境配置
# ================================

# 配置环境 (development, production, testing)
# 如果不设置，默认使用 development
# development: 开发环境，启用调试模式
# production: 生产环境，关闭调试模式，优化性能
# testing: 测试环境，用于单元测试
FLASK_ENV=development